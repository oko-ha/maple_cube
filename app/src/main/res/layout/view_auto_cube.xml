<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="큐브를 선택하세요."
        android:textSize="18sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/btn_red_cube"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" >

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/red_cube"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="레드 큐브"
                android:textSize="20sp"/>

        </TableRow>

        <TableRow
            android:id="@+id/btn_black_cube"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" >

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/black_cube" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="블랙 큐브"
                android:textSize="20sp"/>

        </TableRow>

        <TableRow
            android:id="@+id/btn_bonus_cube"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" >

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/bonus_cube" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="에디셔널 큐브"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>